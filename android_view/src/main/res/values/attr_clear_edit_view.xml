<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--带清除按钮的编辑框控件属性-->
    <declare-styleable name="ClearAbleEditText">
        <attr name="delete_icon" format="reference" />
        <!--右边图片显示的时间-->
        <attr name="del_show_time" format="enum">
            <!--总是显示右边删除图片(一直显示)-->
            <enum name="always_show" value="0" />
            <!--总是隐藏右边图片(不显示)-->
            <enum name="always_hide" value="1" />
            <!--有内容时显示(不管是否有焦点)-->
            <enum name="has_content_show" value="2" />
            <!--有内容并且有焦点时显示-->
            <enum name="has_content_focus_show" value="3" />
        </attr>
    </declare-styleable>
</resources>