<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MarqueeView">
        <!-- 间隔时长 -->
        <attr name="mv_interval" format="integer|reference" />
        <!-- 滚动动画时长 -->
        <attr name="mv_anim_duration" format="integer|reference" />

        <!-- 滚动动画方向 -->
        <attr name="mv_anim_direction">
            <enum name="bottom_to_top" value="0" />
            <enum name="top_to_bottom" value="1" />
            <enum name="right_to_left" value="2" />
            <enum name="left_to_right" value="3" />
        </attr>
    </declare-styleable>
</resources>