<?xml version="1.0" encoding="utf-8"?>
<com.renj.view.refresh.RefreshHeaderView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/module_view_refresh_header_height">

    <ProgressBar
        android:id="@+id/pb_refresh"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:layout_toLeftOf="@id/tv_refresh"
        android:indeterminateDrawable="@drawable/module_view_progress_bar_style"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_arrow"
        android:layout_width="30dp"
        android:layout_height="45dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:layout_toLeftOf="@id/tv_refresh"
        android:background="@mipmap/module_view_pull_arrow" />

    <TextView
        android:id="@+id/tv_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="下拉刷新"
        android:textColor="@color/module_view_main_text"
        android:textSize="15sp" />

</com.renj.view.refresh.RefreshHeaderView>