<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/module_view_title_view_height"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_title_back"
        android:layout_width="@dimen/module_view_title_view_height"
        android:layout_height="match_parent"
        android:src="@mipmap/module_view_back" />

    <TextView
        android:id="@+id/tv_title_content"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/module_view_title_view_height"
        android:layout_marginEnd="@dimen/module_view_title_view_height"
        android:gravity="center"
        android:maxLines="1"
        android:singleLine="true"
        android:text="标题"
        android:textColor="@color/module_view_main_text"
        android:textSize="@dimen/module_view_title_size" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="12dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_right_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="右边"
            android:textColor="@color/module_view_gray_text"
            android:textSize="@dimen/module_view_text_size"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_right_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="12dp"
            android:src="@mipmap/module_view_arrow_right"
            android:visibility="gone" />

        <ViewStub
            android:id="@+id/vs_right_custom"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="12dp"
            android:visibility="gone" />

    </LinearLayout>

    <View
        android:id="@+id/v_title_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/module_view_title_view_line_height"
        android:layout_alignParentBottom="true"
        android:background="@color/module_view_line_bg" />

</RelativeLayout>